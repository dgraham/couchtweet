<h2><%= h @user.id %>'s <%= pluralize(@follower_count, 'follower') %></h2>
<ul>
<%- @followers.each do |f| -%>
  <li><%= link_to f.follower_id, user_path(f.follower_id) %></li>
<%- end -%>
</ul>
<%- content_for :sidebar do -%>
  <%= render :partial => 'users/sidebar', :locals => {:user => @user} %>
<%- end -%>
