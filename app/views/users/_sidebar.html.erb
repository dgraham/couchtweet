<%- unless (defined? info_off) && info_off -%>
  <ul id="user-info">
    <li><strong>Name</strong> <%= user.name %></li>
    <li><strong>Location</strong> <%= user.location %></li>
    <li><strong>Web</strong> <%= user.url %></li>
    <li><strong>Bio</strong> <%= user.bio %></li>
  </ul>
<%- end -%>
<ul id="user-stats">
  <li><%= link_to "<span class='count'>#{@following_count}</span> following".html_safe,
            user_following_index_path(user.id) %></li>
  <li><%= link_to "<span class='count'>#{@follower_count}</span> followers".html_safe,
            user_followers_path(user.id) %></li>
</ul>
<ul id="user-links">
  <li><%= link_to 'Tweets', user_path(user.id) %> <strong><%= @tweet_count %></strong></li>
  <li><%= link_to 'Favorites', user_favorites_path(user.id) %></li>
  <li><%= link_to 'Popular', user_popular_index_path(user.id) %></li>
</ul>

